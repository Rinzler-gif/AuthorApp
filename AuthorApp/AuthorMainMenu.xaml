<Page x:Class="AuthorApp.AuthorMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AuthorApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Головне меню автора">
    <Grid>
        <StackPanel>
            <StackPanel.Background>
                <ImageBrush ImageSource="/pthotos/th-2119159054.jpg"/>
            </StackPanel.Background>
            <Button Content="Редагувати автомобілі" Click="GoToEditCarsSection" HorizontalAlignment="Center" Margin="10">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button Content="Редагувати відеозаписи" Click="GoToEditVideosSection" HorizontalAlignment="Center" Margin="10">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
            <Button Content="Вихід" Click="ExitApplication" HorizontalAlignment="Center" Margin="10" Foreground="Black">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Page>